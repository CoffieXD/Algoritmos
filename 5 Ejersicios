<script>
    var letras ="abcdefghijklmnopqrstuvwxyz|"
    function generateRandom(len) 
    {
      let randomPass = '';
      let wordChars = "abcdefghijklmnopqrstuvwxyz|";
  
     for(let i = 0; i < len; i++) {
      randomPass += wordChars.charAt(Math.floor(Math.random() * wordChars.length));
      console.log("randomPass en for: ", randomPass);
      console.log("randomPass en for: ", randomPass);
    }
    console.log(randomPass)
  }
 
 generateRandom(8);
</script>
<script>
   function generateRandom(len) 
   {
     let palabras = '';
     let abecedario = "ABCDEFGHIJKLMNOPQRSTUWXYZ";
 
    for(let i = 0; i < len; i++) {
     palabras += abecedario.charAt(Math.floor(Math.random() * abecedario.length));
     console.log("palabras en for: ", palabras);
     console.log("palabras en for: ", palabras);
   }
   console.log(palabras)
 }

generateRandom(10);
</script>
   

